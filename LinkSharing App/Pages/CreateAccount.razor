@page "/CreateAccount"

<div class="container" style="background-color:white; ">
    <div class="row justify-content-center align-items-center" style="height:800px">
        <div class="col-lg-6 ">
            <div class="text-center mt-2">
               <img src="./img/logo-devlinks-large.svg" />
            </div>
            <div class="mt-5">
                <div class="text-start lh-1">
                    <p class="fs-3 headingM">Create Account</p>
                    <p class="bodyM">Let's' get you start sharing your links</p>
                </div>
                <div>
                    <EditForm Model="RegisterUser" OnValidSubmit="OnCreateAccount">
                        <DataAnnotationsValidator/>
                        <div class="mb-3">
                            <label for="emailInput" class="form-label bodyS">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <InputText type="email" class="form-control" id="emailInput" @bind-Value="RegisterUser.Email" placeholder="name@example.com" />
                                <ValidationMessage For="@(() => RegisterUser.Email)" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="passwordInput" class="form-label bodyS">Create password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-file-lock"></i>
                                </span>
                                <InputText type="password" class="form-control" id="passwordInput" @bind-Value="RegisterUser.Password" placeholder="At least 8 characters" />
                                <ValidationMessage For="@(() => RegisterUser.Password)" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="passwordConfirm" class="form-label bodyS">Confirm password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-file-lock"></i>
                                </span>
                                <InputText type="password" class="form-control" id="passwordInput" @bind-Value="RegisterUser.PasswordConfirm" placeholder="At least 8 characters" />
                                <ValidationMessage For="@(() => RegisterUser.PasswordConfirm)" />
                            </div>
                        </div>
                        <div class="row justify-content-center p-2">
                            <button type="submit" class="primary-button-blue" style="width:100%">Create new account</button>
                        </div>
                    </EditForm>
                </div>
                <div class="mt-3 text-center">
                    <p class="bodyM">Already have an account? <a href="/">Login</a></p>
                </div>
             
            </div>
        </div>
    </div>
</div>
