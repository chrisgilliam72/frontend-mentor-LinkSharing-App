@page "/preview"
<div class="page-background justify-content-center" >
    <div class="d-flex justify-content-center preview-phone-container">
        @if (!String.IsNullOrEmpty(ImageSrc))
        {
            <img class="round-image mb-2" src="@ImageSrc" height="100px" width="100px" style="position:absolute; top:60px; left:100px;" />
        }

        <span class="headingM" style="position:absolute; top:155px;left:50px;background-color:white">@FirstName @LastName</span>
        <span class="bodyM" style="position:absolute; top:200px;left:50px;background-color:white">@Email</span>

        @if (CustomLinks != null)
        {
            <div style="position:absolute; top:255px; width:80%; height:350px;">
                @foreach (var customLink in CustomLinks.CustomLinks)
                {
                    <div class="row justify-content-center mt-3" style="background-color:white;height:50px">
                        <div class="col-auto ">
                            <button class="preview-platform-button" style="background-color:@customLink.Platform.BrandingColor">
                                <div class="d-flex justify-content-between" style="width:100%;">
                                    <div>
                                        <img src="@customLink.Platform.IconPath" />
                                        <span class="ms-1">@customLink.SelectedPlatformName </span>
                                    </div>

                                    <img src="/img/icon-arrow-right.svg" />
                                </div>
                            </button>
                        </div>
                    </div>
                }
            </div>

        }
    </div>
</div>








