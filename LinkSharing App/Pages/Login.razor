@page "/login"
<div class="container"  style="background-color:white; ">
    <div class="row justify-content-center align-items-center" style="height:800px">
        <div class="col-5 ">
            <div class="text-center mt-2">
                <span class="fw-bold"><img src="/img/logo-devlinks-small.svg" />devlinks</span>
            </div>
            <div class="mt-5">
                <div class="text-start lh-1">
                    <p class="fs-3 fw-bold">
                        Login
                    </p>
                    <p class="fs-6">Add your details below to get back into the app</p>
                </div>
                <div>
                    <form>
                        <div class="mb-3">
                            <label for="emailInput" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="emailInput" placeholder="name@example.com" />
                        </div>
                        <div class="mb-3">
                            <label for="passwordInput" class="form-label">Password</label>
                            <input type="password" class="form-control" id="passwordInput" />
                        </div>
                        <button type="submit" class="purple-button">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



