@page "/"
<div class="container"  style="background-color:white; ">
    <div class="row justify-content-center align-items-center" style="height:800px">
        <div class="col-5 ">
            <div class="text-center mt-2">
                <span class="headingS"><img src="/img/logo-devlinks-small.svg" />devlinks</span>
            </div>
            <div class="mt-5">
                <div class="text-start lh-1">
                    <p class="fs-3 headingM">
                        Login
                    </p>
                    <p class="bodyS">Add your details below to get back into the app</p>
                </div>
                <div>
                    <form>
                        <div class="mb-3">
                            <label for="emailInput" class="form-label bodyS">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input type="email" class="form-control" id="emailInput" placeholder="name@example.com" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="passwordInput" class="form-label bodyS">Password</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-file-lock"></i>
                                </span>
                                <input type="password" class="form-control" id="passwordInput" />
                            </div>              
                        </div>
                        <button type="submit" class="primaryButton">Login</button>
                    </form>
                    <div class="text-center mt-2">
                        <p class="bodyM">Don't have an account? <a href="/CreateAccount">Create Account</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



